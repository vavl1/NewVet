@{
    Layout = "_Layout";
}
@model List<VetEntity>
<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h4 class="font-weight-bold mb-0">Ветеринары</h4>
            </div>
            <div>
                <a href="/Admin/Vet/AddVet" class="btn btn-primary btn-icon-text btn-rounded">
                    <i class="ti-face-smile  btn-icon-prepend"></i>Добавить ветеринара
                </a>
            </div>
        </div>
    </div>
    @foreach(var item in Model)
    {
        <div class="col-md-4 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <img src="@item.PhotoParth" style="width:100px;height:100px;margin-left: auto; margin-right: auto;  display: block; padding-bottom:10px" />
                    <h4 class="card-title">@(item?.Name + " "+ item?.LastName+" "+item?.FatherName)</h4>
                    <p class="card-description">
                      телефон:  @item?.Phone
                    </p>
                    <a href="#"  class="btn btn-outline-primary btn-fw">Просмотреть</a>
                    <a href="/Admin/Vet/DeleteVet/@(item?.Id)" class="btn btn-outline-danger btn-fw">Удалить</a>

                    
                </div>
            </div>
        </div>
    }
    
</div>

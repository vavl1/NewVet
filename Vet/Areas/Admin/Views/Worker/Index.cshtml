*@
@{
    var vetId = ViewBag.VetId;
    Layout = "_Layout";
    var treatments = ViewBag.Treatments as List<TreatmentEntity>;
    var error = ViewData["Error"] as string;
}
@model List<InspectionEntity>
<div class="row">
    
    <div class="col-md-12 grid-margin">
       
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="font-weight-bold mb-0">Мои приемы на сегодня</h4>
                </div>

               
                

            </div>
      

    </div>
    @foreach (var item in Model)
    {
        if (item.IsOk == false)
        {
            <div class="col-md-4 grid-margin stretch-card">
                <div class="card">
                <div class="card-body">

                    <p class="card-description">
                        Кличка животного:  @item.Animal?.NickName
                    </p>
                    <p class="card-description">
                        Описание назначения:  @item.Description
                    </p>
                    <p class="card-description">
                        Время назначения:  @item.Date.GetValueOrDefault().ToShortTimeString();
                    </p>
                    <p class="card-description">
                        <button class="btn btn-outline-primary btn-fw priem" data-bs-toggle="modal" data-bs-target="#exampleModal" data="@item.Id" animal="@item?.Animal?.Id">Назначить лечение</button>
                        
                    </p>
                   
                   


                </div>
            </div>
        </div>
        }
    }

</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Создание лечения</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="form" action="/Admin/Worker/CreateTreatment" method="post">
                <div class="modal-body">
                    <input type="hidden" name="InspectionId" id="InspectionId" />
                    <input type="hidden" name="AnimalId" id="AnimalId" />
                    <input type="hidden" name="VetId" id="VetId" value="@vetId" />
                    <div class="form-group">
                        <label>Диагноз</label>

                        <input type="text" class="form-control form-control-sm" name="Diagnos" required>
                    </div>
                    <div class="form-group">
                        <label>Предписание по лечению</label>

                        <textarea class="form-control form-control-sm" name="Description" id="default-editor"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts{
    <script>
        $(document).ready(function(){
            tinymce.init({
                selector: 'textarea#default-editor',
                height: 250,
            });
           
            $(".priem").click(function(){
                $("#InspectionId").val($(this).attr("data"));
                $("#AnimalId").val($(this).attr("animal"));
                
            })
        })
       
    </script>
}